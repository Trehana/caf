.form-group
  .btn-group aria-label="Actions" role="group"
    = f.button t("#{@resource}.publish"),value: 'publish', class: "btn btn-success"
    = f.button t("#{@resource}.save_draft"),value: 'save_draft', class: "btn btn-primary"
    = link_to 'View', @resource, class: 'btn btn-default', target: '_blank'
    = link_to 'Back', @resource_index_path, class: 'btn btn-default'
