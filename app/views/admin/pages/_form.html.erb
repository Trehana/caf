<%= form_for [:admin, @resource] do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, id: 'ck_editor_textarea' %>
  </div>
  <div class="field">
    <%= f.label :meta_tags %><br>
    <%= f.text_field :meta_tags, "data-role" => "tagsinput" %>
  </div>
  <div class="actions">

  <div class="btn-group" role="group" aria-label="Actions">
    <%= f.button t('page.publish'),value: 'publish', class: "btn btn-success" %>
    <%= f.button t('page.save_draft'),value: 'save_draft', class: "btn btn-primary" %>
  </div>

  </div>
<% end %>
