
<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>pages | <small>Add/Edit/Delete</small></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Meta tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.body %></td>
        <td><%= page.meta_tags %></td>
        <td><%= link_to 'View', page, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_page_path(page), class: 'btn btn-default' %></td>
        <td><%= link_to 'Delete', page, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path, class: 'btn btn-default' %>
