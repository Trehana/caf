#section-one.section
  .wrap
    .content-news      
      h1
        = t('helpers.label.article.index_title')
      p
        = t('helpers.label.article.index_description')
      hr
      
    #category-navigation
      ul
        li#btn-coffee-related
          = link_to t('helpers.label.article.category_nav.coffee_related'), news_tags_path(tag: 'coffee')
        li#btn-art-related
          = link_to t('helpers.label.article.category_nav.art_related'), news_tags_path(tag: 'art')

              
    .news-post-list
      == render partial: 'shared/common_index_listing', locals: { resources: @resources, resource_class_name: @resource_class_name }

        
    = paginate @resources
